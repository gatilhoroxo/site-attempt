---
layout: null
---
[
  {%- assign all_pages = site.pages | where_exp: "item", "item.url != '/404.html'" -%}
  {%- assign valid_pages = "" | split: "" -%}
  {%- for page in all_pages -%}
    {%- unless page.url contains '/assets/' or page.url contains '/README/' -%}
      {%- if page.title -%}
        {%- assign valid_pages = valid_pages | push: page -%}
      {%- endif -%}
    {%- endunless -%}
  {%- endfor -%}
  {%- for page in valid_pages -%}
  {
    "title": {{ page.title | jsonify }},
    "url": {{ page.url | relative_url | jsonify }},
    "content": {{ page.content | strip_html | normalize_whitespace | truncate: 500 | jsonify }},
    "layout": {{ page.layout | jsonify }}
  }{% unless forloop.last %},{% endunless %}
  {%- endfor -%}
]
